<%- include("partial/header.ejs") %>
    <%- include("partial/header-top.ejs") %>
        <%- include("partial/banner.ejs") %>
            <style>
                .disabled {
                    pointer-events: none;
                    cursor: not-allowed;
                }
            </style>
            <!-- blog -->
            <div class="blog">
                <div class="blog-left">

                    <div class="allposts">
                        <% data.map((response)=> { %>

                            <div class="blog-left-grid">
                                <div class="blog-left-grid-left">
                                    <h3>
                                        <a href="viewpost/">
                                            <%- response.title %>
                                        </a>
                                    </h3>
                                    
                                     
                                    <p>by <span><%- response.userList.userName %></span> |
                                        <%- response.createdAt.toDateString() %>
                                    </p>
                                </div>
                                <div class="clearfix"> </div>
                                <a href="http://"><img src="/uploads/<%= response.image %>" alt=" " class="img-responsive" style="width:750px; height: 320px" /></a>
                                <p class="para">
                                    <%- response.postText.slice(0,999)+" ........" %>
                                </p><br>
                                <div class="rd-mre">
                                    <a href="/view-post/<%= response.slug %>" class="hvr-bounce-to-bottom quod">Read More</a>
                                </div>
                                
                            </div>
                        <% }) %>
                           
                                <nav>
                                    <ul class="pagination pagination-lg">
                                        <!-- <li class="disabled"><a href="#"><i>«</i></a></li>
                                        <li class="active"><a href="#">1</a></li>
                                        <li><a href="#">2</a></li>
                                        <li><a href="#">3</a></li>
                                        <li><a href="#">4</a></li>
                                        <li><a href="#">5</a></li>
                                        <li><a href="#"><i>»</i></a></li> -->
                                        
                                        
                                        
                                        
                                            <li class="">
                                                <a class="page-link" href="">
                                                   
                                                </a>
                                            </li>
                                            
                                    </ul>
                                </nav>
                    </div>
                    <div class="filterposts">

                    </div>
                </div>
                <div class="blog-right">
                    <div class="sap_tabs">
                        <div id="horizontalTab" style="display: block; width: 100%; margin: 0px;">
                            <ul class="resp-tabs-list">
                                <!-- <li class="resp-tab-item grid1" aria-controls="tab_item-1" role="tab"><span>Recent</span></li>
                                <li class="resp-tab-item grid2" aria-controls="tab_item-2" role="tab"><span>Comments</span></li>
                                <li class="resp-tab-item grid3" aria-controls="tab_item-3" role="tab"><span>Categories</span></li>
                                <div class="clear"></div> -->
                                <ul class="resp-tabs-list">
                                    <li class="resp-tab-item grid1" aria-controls="tab_item-0" role="tab"><span>Recent</span></li>
                                    <li class="resp-tab-item grid2" aria-controls="tab_item-1" role="tab"><span>Comment</span></li>
                                    <li class="resp-tab-item grid3" aria-controls="tab_item-2" role="tab"><span>Category</span></li>
                                    <div class="clear"></div>
                                </ul>
                            </ul>
                            <div class="resp-tabs-container">
                                <div class="tab-1 resp-tab-content" aria-labelledby="tab_item-1">
                                    <% data.map((response)=> { %>
                                        <div class="facts">
                                            <div class="tab_list">
                                                <a href="viewpost/<%- response.slug %>">
                                                    <img src="/uploads/<%- response.image %>" alt=" " class="img-responsive" style="width: 60px; height: 60px;" />
                                                    </a>
                                                </a>
                                            </div>
                                            <div class="tab_list1">
                                                <a href="viewpost/<%- response.slug %>">
                                                    <%- response.userList.firstName + " " +  response.userList.lastName%>
                                                </a>
                                                <p>
                                                    <%- response.createdAt.toDateString() %><span><%- response.title %></span></p>
                                                    
                                            </div>
                                            <div class="clearfix"> </div>

                                            
                                        </div>
                                        <% }) %>
                                        
                                </div>
                                <div class="tab-1 resp-tab-content" aria-labelledby="tab_item-2">
                                    
                                        <div class="facts">
                                            <div class="tab_list">
                                                <a href="images/9-.jpg" class="b-link-stripe b-animate-go   swipebox" title="">
                                                    <img src="/images/co.png" alt=" " class="img-responsive" />
                                                </a>
                                            </div>
                                            <div class="tab_list1">
                                                <a href="#">
                                                    
                                                </a>
                                                <p>
                                                    
                                            </div>
                                            <div class="clearfix"> </div>
                                        </div>
                                        
                                </div>
                                <div class="tab-1 resp-tab-content" aria-labelledby="tab_item-3">
                                    <% categoryDetails.map((data)=>{%>

                                        <div class="facts">
                                            <div class="tab_list1">
                                                <a class="catid" href="<%- data._id %>" data-value="<%- data._id %>">
                                                    <%- data.categoryName %>
                                                </a>
                                            </div>
                                            <div class="clearfix"> </div>
                                        </div>
                                    <%})%>
                                        
                                </div>
                            </div>
                            <script src="/jstwo/easyResponsiveTabs.js" type="text/javascript"></script>
                            <script type="text/javascript">
                                $(document).ready(function() {
                                    $('#horizontalTab').easyResponsiveTabs({
                                        type: 'default', //Types: default, vertical, accordion           
                                        width: 'auto', //auto or any width like 600px
                                        fit: true // 100% fit in a container
                                    });
                                });
                            </script>
                            <link rel="stylesheet" href="/csstwo/swipebox.css">
                            <script src="/jstwo/jquery.swipebox.min.js"></script>
                            <script type="text/javascript">
                                jQuery(function($) {
                                    $(".swipebox").swipebox();
                                });
                            </script>
                        </div>
                    </div>
                </div>
                <div class="clearfix"> </div>
            </div>
